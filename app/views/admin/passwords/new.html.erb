<div class="login-box">
	 <div class="login-logo">
		<%= link_to admin_root_path , class:'', title: 'Sweep Media' do %><%= image_tag("admin_logo.png", height: '100', width: '100', alt: 'transcon logo') %><% end %>
	  </div>
	  <div class="login-box-body">
			 <p class="login-box-msg">Forgot your password?</p>
			  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, id: "forgot_password" }) do |f| %>

			 <div class="form-group has-feedback">
				<%= f.label :email %>
				<%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
			  </div>

			  <div class="actions form-group">
				<%= f.submit "Send me reset password instructions", class:"btn btn-primary btn-block btn-flat" %>
			  </div>
			<% end %>
			<div class=" text-center">
			<%- if controller_name != 'sessions' %>
			  <%= link_to "Back to Log in", new_session_path(resource_name) %><br />
			<% end -%>
			</div>
	</div>
</div>
